<%= simple_form_for([@incident, @incident.replies.build], remote: true) do |f| %>

    <div class="field">
      <div class="control">
        <%= f.input :reply, required: false, input_html: { class: 'textarea' }, wrapper: false %>
      </div>
    </div>
    
    <%= f.button :submit, 'Leave a reply', class:'button is-info' %>
    
<% end %>