<div class="column is-8">
  <h3 class="title is-5 has-text-grey-light">Latest Incidents</h3>
  <div class="incidents">
    <% @incidents.each do |incident| %>
      <div class="columns bb-not-last pv10">
        <div class="column is-1">
          <%= gravatar_image_tag(incident.user.email, class:'border-radius-50', size: 48, alt: incident.user.username) %>
        </div>
        <div class="column is-8">
          <%= link_to incident do %>
            <h3 class="title is-5"><%= incident.title %></h3>
          <% end %>
          <div class="content">
            <%= truncate(strip_markdown(incident.content), length: 140) %>
            <p><em><small>Posted <%= time_ago_in_words(incident.created_at) %> ago in
              <% if incident.channel %>
                <%= link_to incident.channel.channel, incident.channel %>
              <% end %>
              by <%= incident.user.username %>
              </small>
              </em>
            </p>
          </div>
        </div>

        <% if incident_author(incident) || has_role?(:admin) %>
          <div class="column has-text-right">
            <%= link_to 'Edit', edit_incident_path(incident), class:'button' %>
            <%= link_to 'Delete', incident, method: :delete, data: { confirm: 'Are you sure?' }, class: "button" %>
          </div>
        <% end %>

      </div>
    <% end %>
  </div>
</div>

